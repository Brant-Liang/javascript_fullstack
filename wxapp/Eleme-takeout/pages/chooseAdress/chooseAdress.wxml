<!-- pages/chooseAdress/chooseAdress.wxml -->
<view class="page">
  <view class="navigation">
    <view class="arrow"></view>
    <view class="nav-name">选择收获地址</view>
  </view>
  <view class="chooseAd">
    <text class="city">选择城市</text>
    <view class="arrow2"></view>
    <input type="text" name="" placeholder="小区/写字楼/学校等" />
  </view>
  <view class="mian-wrapper">
    <view class="split">当前地址</view>
    <view class="detail">
      <view class="left">敬业大道江西财经大学（麦庐园校区）</view>
      
      <view class="right" bind:tap="reLocation">
        <i class="iconfont .icon-reLocation"></i>
        重新定位
      </view>
    </view>
    <view class="split">收货地址</view>
    <view class="receiptAd">
      <view class="title">
        <text class="place">学校</text>
        <text class="detail-place">艾欧尼亚（战争学院）低年级教学楼快乐E班</text>
      </view>
      <view class="userMsg">
        <text class="userName">亚索（先生）</text>
        <text>135487484411</text>
      </view>
    </view>
    <view class="bottom">
      <i class="iconfont icon-add"></i>
      新增地址
      </view>
  </view>
</view>