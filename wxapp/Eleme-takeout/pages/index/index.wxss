/* pages/index/index.wxss */
.page{
   width: 100%;
   color: #f4f4f4;
}
.navigation{
   width: 100%;
   height: 100rpx;
   position: fixed;
   top: 0;
   background-color: #0097ff;
   font-size: 17px;
   text-align: left;
   padding-top: 36rpx;
}
.navigation text{
   position: relative;
   left: 60rpx;
   padding-top: 56rpx;
   color: #ffffff;
   font: bold;
}
.navigation .arrow{
   position: relative;
   left: 20rpx;
   top: 40rpx;
   width: 20rpx;
   height: 20rpx;
   border: 5rpx solid #ffffff;
   border-top: transparent;
   border-right: transparent;
   transform: rotateZ(45deg);
}
.header{
   position: relative;
   top: 120rpx;
   text-align: center;
   width: 100%;
   height: 100rpx;
   background-color: #0097ff;
   padding: 20rpx;
}
.search{
   width: 96%;
   height: 80rpx;
   background-color: #ffffff;
   border-radius: 40rpx;

}
.search text{
   font-family: Microsoft JhengHei;
   font-size: 32rpx;
   color: #999999;
   position: relative;
   top: 15rpx;
}
swiper{
   position: relative;
   top:100rpx;
   width: 100%;
   height: 240rpx;
}
swiper-item image{
   height: 100%;
   width: 100%;
}
.menu{
   position: relative;
   top: 100rpx;
   margin-top: 20rpx;
   width: 100%;
   height: 360rpx;
}
.menu-list{
   display: inline-block;
   text-align: center;
   width: 24%;
   height: 160rpx;
}
navigator image{
   width: 150rpx;
   height: 70rpx;
   margin-top: 0;
}
.menu-names text{
   font-size: 26rpx;
   color: #aaaaaa;
}