<!-- pages/index/index.wxml -->
<view class="page">
    <view class="navigation">
      <view class="arrow"></view>
      <view class="nav-name">
         <text>饿了么</text>
      </view>
   </view>
   <view class="header">
      <view class="search">
         <text>🔍搜索商家、商品名称</text>
      </view>
   </view>
   <swiper class="banner" indicator-dots="{{true}}" autoplay="{{true}}" interval="3000" circular="{{true}}">
      <block wx:for="{{imgUrl}}" wx:key="{{index}}">
         <swiper-item class="banner-images" >
            <image src="{{item}}" />
         </swiper-item>
      </block>
   </swiper>
   <scroll-view class="menu" scroll-x="true" scroll-with-animation="{{true}}">
      <view class="menu-list" wx:for="{{menu}}" wx:for-item="one" bind:tap="goToDetail">
         <navigator target="self" url="#" class="">
               <image src="{{one.iconUrl}}" />
            <view class="menu-names">
               <text>{{one.name}}</text>
            </view>
         </navigator>
      </view>
   </scroll-view>

   <view class="merchant">
      <view class="merchant-header">
         <text class="sort">综合排序</text>
         <text class="distance">离我最近</text>
      </view>
      <view class="merchant-list"></view>
   </view>
</view>